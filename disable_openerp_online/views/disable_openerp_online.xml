<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template
            id="assets_backend"
            name="mail assets"
            inherit_id="mail.assets_backend"
        >
            <xpath
                expr="//script[contains(@src,'announcement.js')]"
                position="after"
            >
                <script
                    type="text/javascript"
                    src="/disable_openerp_online/static/src/js/disable_openerp_online.js"
                ></script>
            </xpath>
            <!-- Now get rid of announcement.js altogether -->
            <xpath
                expr="//script[contains(@src,'announcement.js')]"
                position="replace"
            />
        </template>
    </data>
</openerp>
