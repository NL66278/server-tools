<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="ir_cron_ldap_populate" model="ir.cron">
        <field name="name">LDAP Populate Scheduler</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field
            name="nextcall"
            eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:30:00')"
            />
        <field name="model">res.company.ldap</field>
        <field name="function">cron_populate_all</field>
    </record>

</odoo>
